<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" type="text/css" href="/resources/css/style.css">

        <link rel="shortcut icon" href="/resources/images/adoptar.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/resources/images/adoptar.ico">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/resources/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="/resources/css/stylecontact.css">
    <!-- ALL VERSION CSS -->
    <link rel="stylesheet" href="/resources/css/versions.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="/resources/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/resources/css/custom.css">

</head>
<body>
<h1>Iniciar sesión </h1>
    <div id="contact" class="section wb">
            <div class="container">
                <div class="section-title row text-center">
                    <div class="col-md-8 offset-md-2">
                        <small>Bienvenido a huellitas con amor</small>
                        <h3>Registro</h3>
                    </div>
                </div><!-- end title -->

                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="contact_form">
                            <div id="message"></div>
                            <form id="contactform" class="row" action="" name="contactform" method="post">
                                <fieldset class="row row-fluid">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="input_documento" id="input_documento" class="form-control" placeholder="documento">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="date" name="input_fecha_de_nacimiento" id="input_fecha_de_nacimiento" class="form-control" placeholder="fecha de nacimiento">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="firstName" id="firstName" class="form-control" placeholder="Nombre completo">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="email" name="email" id="inputCorreo" class="form-control" placeholder="Tu Email">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="direccion" id="direccion" class="form-control" placeholder="dirección">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="password" name="pass" id="inputContrasena" class="form-control" placeholder="Introduce una contraseña">
                                    </div>
                                    
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="phone" id="phone" class="form-control" placeholder="Teléfono">
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <input type="password" name="pass1" id="inputReContrasena" class="form-control" placeholder="Vuelve a introducir la contraseña"> 
                                    </div>                              
                                    
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                        <button onclick="validarDatos()" type="submit" value="SEND" id="enviar" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">Enviar</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end section -->
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<% if(typeof alert != "undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<% showConfirmButton %>',
                timer: '<%= timer %>'

            }).then(() => {
                    window.location = '/<%= ruta%>'
                })

        </script>
     <% } %>


    <script type="text/javascript"src="/resources/js/registro.js"></script>

    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>

</body>
</html>